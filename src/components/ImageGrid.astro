<div class="c-image-grid">
  <slot />
</div>

<style>
  .c-image-grid {
    position: relative;

    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;

    height: 340px;
    width: 100%;
  }

  @media screen and (max-width: 920px) {
    .c-image-grid {
      height: 240px;
      overflow: hidden;
      width: 120%;
      left: -10%;
    }
  }
  @media screen and (max-width: 640px) {
    .c-image-grid {
      height: 160px;
    }
  }
</style>
