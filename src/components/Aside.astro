---
import { Image } from 'astro:assets';

import LaravelIcon from '../images/icons/laravel.svg';
import VueIcon from '../images/icons/vue.svg';
import JSIcon from '../images/icons/javascript.svg';
import PhpIcon from '../images/icons/php.svg';
import ReactIcon from '../images/icons/react.svg';
import AstroIcon from '../images/icons/astro.svg';
import TSIcon from '../images/icons/typescript.svg';
import SvelteIcon from '../images/icons/svelte.svg';
import AlpineIcon from '../images/icons/alpine.svg';
---

<aside class="c-aside">
    <h4 class="c-aside__title">
        Tech Stack
    </h4>
    <div class="o-stack o-stack--sm">
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ PhpIcon } alt="PHP" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    PHP
                </h5>
            </div>
            <span class="c-aside__experience">
                Production
            </span>
        </div>
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ JSIcon } alt="JavaScript" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    JavaScript (ES6)
                </h5>
            </div>
            <span class="c-aside__experience">
                Production
            </span>
        </div>
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ LaravelIcon } alt="LAravel" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    Laravel
                </h5>
            </div>
            <span class="c-aside__experience">
                Production
            </span>
        </div>
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ VueIcon } alt="Vue" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    Vue (v2)
                </h5>
            </div>
            <span class="c-aside__experience">
                Production
            </span>
        </div>
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ AlpineIcon } alt="AlpineJS" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    AplineJS
                </h5>
            </div>
            <span class="c-aside__experience">
                Production
            </span>
        </div>
        <span class="c-aside__br"></span>
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ ReactIcon } alt="React" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    React
                </h5>
            </div>
            <span class="c-aside__experience">
                Personal
            </span>
        </div>
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ AstroIcon } alt="Astro" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    Astro
                </h5>
            </div>
            <span class="c-aside__experience">
                Personal
            </span>
        </div>
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ TSIcon } alt="TypeScript" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    TypeScript
                </h5>
            </div>
            <span class="c-aside__experience">
                Personal
            </span>
        </div>
        <span class="c-aside__br"></span>
        <div class="c-aside__item">
            <div class="c-aside__header">
                <span class="c-aside__icon">
                    <Image src={ SvelteIcon } alt="Svelte" class="c-aside__src" />
                </span>
                <h5 class="c-aside__name">
                    Svelte
                </h5>
            </div>
            <span class="c-aside__experience">
                Hobbyist
            </span>
        </div>
    </div>
</aside>

<style>
    .c-aside {
        display: block;

        padding: 24px;

        border-radius: 16px;
        border: 1px solid rgba(var(--border), 0.1);
    }

    .c-aside__item {
        display: flex;
        gasp: 20px;
        align-items: center;
        justify-content: space-between;
    }

    .c-aside__title {
        margin: 0 0 34px;

        color: rgba(var(--light));
        font-weight: 600;
        font-size: 16px;
    }

    .c-aside__header {
        display: flex;
        gap: 14px;
        align-items: center;
    }

    .c-aside__icon {
        display: flex;
        align-items: center;
        justify-content: center;

        border-radius: 50%;
        background-color: rgba(var(--dark), 0.5);

        width: 38px;
        height: 38px;
    }

    .c-aside__src {
        display: block;

        width: 24px;
        height: 24px;
    }

    .c-aside__name {
        margin: 0;

        color: rgba(var(--light));
        font-weight: 400;
        font-size: 16px;
    }

    .c-aside__experience {
        color: rgba(var(--text));
        font-weight: 400;
        font-size: 14px;
    }

    .c-aside__br {
        display: block;

        background-color: rgba(var(--border), 0.05);

        width: 100%;
        height: 1px;
    }
</style>