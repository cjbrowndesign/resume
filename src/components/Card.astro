---
const {
	id,
	startDate,
	endDate,
	role,
	employer,
	shortDescription,
	button = 'Learn More'
} = Astro.props;
---

<article class="c-card">
	<h4 class="c-card__subtitle">
		{ startDate } - { endDate }
	</h4>
	<h3 class="c-card__title">
		{ role } - { employer }
	</h3>
	<p class="c-card__copy">
		{ shortDescription }
	</p>
	<button @click=`modal = ${id}` class="c-card__link">
		{ button }
	</button>
</article>

<style>
	.c-card {
		position: relative;
		z-index: 5;
	}

	.c-card:before {
		display: block;

		position: absolute;
		top: -30px;
		left: -30px;
		z-index: -1;

		opacity: 0%;
		scale: 0.98;

		transition: 0.125s ease-in-out all;

		border-radius: 16px;
		border: 1px solid rgba(var(--border), 0.1);
		background-color: rgba(var(--dark), 0.5);

		width: calc(100% + 60px);
		height: calc(100% + 60px);

		content: "";
	}

	.c-card:hover:before {
		opacity: 100%;
		scale: 1;
	}

	.c-card__subtitle {
		display: inline-block;

		margin: 0 0 16px;
		padding-left: 10px;

		border-left: 2px solid rgba(var(--border), 0.6);

		color: rgba(var(--border), 0.5);
		font-weight: 400;
		line-height: 1;
		font-size: 14px;
	}

	.c-card__title {
		margin: 0 0 12px;

		color: rgb(var(--light));
		font-weight: 600;
		font-size: 16px;
	}
	
	.c-card__copy {
		margin: 0 0 16px;

		color: rgb(var(--text));
		line-height: 24px;
		font-size: 14px;
	}

	.c-card__link {
		margin: 0;
		padding: 0;

		border: 0;
		background: none;

		text-decoration: none;
		color: rgba(var(--accent));

		cursor: pointer;
	}
</style>
