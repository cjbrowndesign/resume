---
const {
  id,
  startDate,
  endDate,
  role,
  employer,
  location,
  tags = [],
} = Astro.props;
---

<dialog
  class="c-modal"
  x-show=`modal == ${id}`
  x-trap.noscroll=`modal == ${id}`
  x-transition.225ms
>
  <div class="c-modal__content" @click.outside="modal = null">
    <h4 class="c-modal__subtitle">
      {startDate} - {endDate}
    </h4>
    <h3 class="c-modal__title">
      {role} - <span>{employer}</span> - <span>{location}</span>
    </h3>
    <ul class="c-modal__tags">
      {tags.map((tag: string) => <li class="c-modal__tag">{tag}</li>)}
    </ul>
    <div class="c-modal__copy is-quarantine">
      <slot />
    </div>
  </div>
</dialog>

<style>
  .c-modal {
    display: flex;

    position: fixed;
    top: 0;
    left: 0;

    align-items: center;
    justify-content: center;

    z-index: 10;

    border: 0;
    background-color: rgba(0, 0, 0, 0.55);

    width: 100%;
    height: 100%;

    color: rgb(var(--light));
  }

  .c-modal__content {
    padding: 48px;

    border-radius: 16px;
    border: 1px solid rgba(var(--border), 0.2);
    background-color: rgba(var(--body));

    max-width: 720px;
    max-height: 65vh;

    overflow: scroll;
  }

  .c-modal__subtitle {
    display: inline-block;

    margin: 0 0 16px;
    padding-left: 10px;

    border-left: 2px solid rgba(var(--border), 0.6);

    color: rgba(var(--border), 0.5);
    font-weight: 400;
    line-height: 1;
    font-size: 14px;
  }

  .c-modal__title {
    margin: 0 0 12px;

    font-weight: 600;
    font-size: 16px;
  }

  .c-modal__title > span {
    font-weight: 400;
    color: rgba(var(--text));
  }

  .c-modal__copy {
    margin: 0 0 16px;

    color: rgb(var(--text));
    line-height: 24px;
    font-size: 14px;
  }

  .c-modal__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;

    margin: 22px 0;
    padding: 0;

    list-style: none;
  }

  .c-modal__tag {
    display: block;

    border: 1px solid rgba(var(--border), 0.2);
    padding: 5px 16px;
    background-color: rgba(var(--body));

    border-radius: 100px;

    font-size: 14px;
    font-weight: 500;
    color: rgba(var(--text));
  }
</style>
